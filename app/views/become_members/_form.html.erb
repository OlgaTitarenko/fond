<%= form_with(model: become_member, local: true) do |form| %>
 <div data-controller="form-element">
  <% if become_member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(become_member.errors.count, "error") %> prohibited this become_member from being saved:</h2>

      <ul>
        <% become_member.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Прізвище та ім’я" %>
    <%= form.text_field :name, placeholder: "Введіть текст...", class: "input" %>
  </div>

  <div class="field">
    <%= form.label :email, 'Електронна адреса' %>
    <%= form.text_field :email, placeholder: "yourmail@gmail.com",  class: "input"  %>
  </div>

  <div class="field">
    <%= form.label :phone, 'Номер телефону' %>
    <%= form.number_field :phone, placeholder: "+38 000 000 00 00", class: "input"  %>
  </div>
    <div class="field">
      <%= form.label :state, "Місце проживання" %>
      <%= form.select :state,  become_member.states.invert, {prompt: "Вибрати область"}, {class:'form-select'} %>
      <%= form.select :city, become_member.cities, {prompt:"Вибрати населений пункт", class:'form-select'},  {include_blank: true}, {} %>
    </div>

  <p>Готовий допомагати як:</p>

  <div class="field">
    <%= form.check_box :coordinator %>
    <%= form.label :coordinator, 'Волонтер-координатор' %>
  </div>

  <div class="field">
    <%= form.check_box :knitt %>
    <%= form.label :knitt, 'Волонтерство в’язанням' %>
  </div>

  <div class="field">
    <%= form.check_box :meetings %>
    <%= form.label :meetings, 'Волонтер на заходах фонду' %>
  </div>

  <div class="field">
    <%= form.text_area :other %>
  </div>

  <div class="actions button">
    <%= form.submit %>
  </div>
 </div>
<% end %>
