<%= form_with(model: member, data: {controller: "form-reset"}) do |form| %>
 <div data-controller="form-element" >

    <%= form.button "Validate", formaction: new_member_path, formmethod: :get, data: {form_element_target: "submitbtn", turbo_frame: :dynamic_fields} %>
    
  <div class="field">
    <%= form.label :name, "Прізвище та ім’я" %>
    <%= form.text_field :name, placeholder: "Введіть текст...", class: "input" %>
  </div>

  <div class="field">
    <%= form.label :email, 'Електронна адреса' %>
    <%= form.text_field :email, placeholder: "yourmail@gmail.com",  class: "input"  %>
  </div>

  <div class="field">
    <%= form.label :phone, 'Номер телефону' %>
    <%= form.number_field :phone, placeholder: "+38 000 000 00 00", class: "input"  %>
  </div>

   <div class="field">
      <%= form.label :state, "Місце проживання" %>
      <%= form.select :state,  member.states.invert, {prompt: "Вибрати область"}, { :onchange => "this.form.requestSubmit();"}  %>
      <%= form.select :city, member.cities, {prompt:"Вибрати населений пункт"},  {include_blank: true} %>
    </div>
   
  <p>Готовий допомагати як:</p>

  <div class="field">
    <%= form.check_box :coordinator %>
    <%= form.label :coordinator, 'Волонтер-координатор' %>
  </div>

  <div class="field">
    <%= form.check_box :knitt %>
    <%= form.label :knitt, 'Волонтерство в’язанням' %>
  </div>

  <div class="field">
    <%= form.check_box :meetings %>
    <%= form.label :meetings, 'Волонтер на заходах фонду' %>
  </div>

  <div class="field">
    <%= form.text_area :other %>
  </div>

</div>
 
    <div class="actions button">
    <%= form.submit %>
  </div>
 

<% end %>
